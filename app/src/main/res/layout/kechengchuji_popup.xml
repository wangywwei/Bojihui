<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/popo"
        android:background="@drawable/ditu"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="@dimen/man_240dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="@dimen/man_41dp"
            android:src="@drawable/tishi"
            android:layout_width="@dimen/man_160dp"
            android:layout_height="@dimen/man_160dp" />
        <TextView
            android:layout_marginTop="@dimen/man_32dp"
            android:textSize="@dimen/text_19sp"
            android:textColor="@color/rgb_ffffff"
            android:text="提示"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginBottom="@dimen/man_111dp"
            android:layout_marginTop="@dimen/man_4dp"
            android:textSize="@dimen/text_13sp"
            android:textColor="@color/rgb_ffffff"
            android:text="请解锁“初级课程”后在进行训练。"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_above="@id/popo"
        android:layout_centerHorizontal="true"
        android:id="@+id/view"
        android:layout_width="@dimen/man_1dp"
        android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginLeft="@dimen/man_90dp"
            android:layout_toRightOf="@id/view"
            android:layout_above="@id/popo"
            android:src="@drawable/guanbi_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
</RelativeLayout>
