<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".module.quanming.geren.GerenFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/gerenvideo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/man_168dp"/>

    <View
        android:background="@color/color_F8F8F8"
        android:layout_width="match_parent"
        android:layout_height="@dimen/man_12dp"/>
    <TextView
        android:layout_marginLeft="@dimen/man_12dp"
        android:layout_marginTop="@dimen/man_13dp"
        android:textColor="@color/color_2C2C2C"
        android:textSize="@dimen/text_13sp"
        android:text="我的视频"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/meiyouwode"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/man_12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/kongzhuangtai"
            android:src="@drawable/kongzhuangtai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/text_13sp"
            android:textColor="@color/color_2C2C2C"
            android:text="这个动作等待你来一起挑战！"
            android:layout_marginTop="@dimen/man_12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/shangchuanwode"
            android:layout_marginTop="@dimen/man_12dp"
            android:src="@drawable/shangchuanwode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/youwode"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/man_12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/gerenmyvideo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/man_168dp"/>

        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/man_44dp">

            <ImageView
                android:id="@+id/zan"
                android:layout_marginLeft="@dimen/man_12dp"
                android:src="@drawable/zan_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/zannum"
                android:layout_toRightOf="@id/zan"
                android:layout_marginLeft="@dimen/man_4dp"
                android:textSize="@dimen/text_13sp"
                android:textColor="@color/color_C9C9C9"
                android:text="53"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_toRightOf="@id/zannum"
                android:id="@+id/fenxiang"
                android:layout_marginLeft="@dimen/man_12dp"
                android:src="@drawable/fenxiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/chonglu"
                android:gravity="center"
                android:textSize="@dimen/text_10sp"
                android:textColor="@color/rgb_ffffff"
                android:text="重录"
                android:layout_marginRight="@dimen/man_12dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_denglu"
                android:layout_width="@dimen/man_64dp"
                android:layout_height="@dimen/man_24dp" />
        </RelativeLayout>


    </LinearLayout>



</LinearLayout>