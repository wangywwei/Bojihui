<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_2C2C2C"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".module.landing.LandingActivity">

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/man_88dp"
        android:src="@mipmap/ic_launcher"
        android:layout_width="@dimen/man_80dp"
        android:layout_height="@dimen/man_80dp" />
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/man_122dp"
        android:visibility="visible"
        android:id="@+id/landing_denglu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerInParent="true"
            android:src="@drawable/slogan"
            android:layout_width="@dimen/man_297dp"
            android:layout_height="@dimen/man_48dp" />

        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/man_52dp"
            android:layout_marginRight="@dimen/man_52dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/landing_youke"
                android:gravity="center"
                android:textSize="@dimen/text_16sp"
                android:text="随便逛逛"
                android:textColor="@color/rgb_ffffff"
                android:background="@drawable/shape_denglu"
                android:layout_width="@dimen/man_120dp"
                android:layout_height="@dimen/man_44dp" />
            <TextView
                android:id="@+id/landing_shoujidenglu"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textSize="@dimen/text_16sp"
                android:text="手机登录"
                android:textColor="@color/rgb_ffffff"
                android:background="@drawable/shape_denglu"
                android:layout_width="@dimen/man_120dp"
                android:layout_height="@dimen/man_44dp" />

        </RelativeLayout>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/shoujideng"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/man_120dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginRight="@dimen/man_12dp"
            android:layout_marginLeft="@dimen/man_12dp"
            android:background="@drawable/shape_shoujidengl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/man_158dp">
        <TextView
            android:id="@+id/shoujidenglu"
            android:layout_margin="@dimen/man_12dp"
            android:textColor="@color/rgb_ffffff"
            android:textSize="@dimen/text_16sp"
            android:text="手机登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/landing_guanbi"
                android:src="@drawable/guanbi"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/man_12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/landing_shouji"
                android:textColorHint="@color/color_C9C9C9"
                android:paddingLeft="@dimen/man_12dp"
                android:hint="输入手机号"
                android:layout_below="@id/shoujidenglu"
                android:background="@drawable/shape_ph"
                android:layout_marginRight="@dimen/man_12dp"
                android:layout_marginLeft="@dimen/man_12dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/man_44dp" />

            <EditText
                android:id="@+id/landing_yanzheng"
                android:layout_marginBottom="@dimen/man_12dp"
                android:layout_marginTop="@dimen/man_12dp"
                android:textColorHint="@color/color_C9C9C9"
                android:paddingLeft="@dimen/man_12dp"
                android:hint="请输入验证码"
                android:layout_below="@id/landing_shouji"
                android:background="@drawable/shape_ph"
                android:layout_marginRight="@dimen/man_12dp"
                android:layout_marginLeft="@dimen/man_12dp"
                android:layout_width="@dimen/man_187dp"
                android:layout_height="@dimen/man_44dp" />

            <com.hxbj.bijihui.utils.CountDownTextView
                android:id="@+id/landing_yanzhengbutton"
                android:textSize="@dimen/text_16sp"
                android:gravity="center"
                android:textColor="@color/rgb_ffffff"
                android:text="获取验证码"
                android:layout_margin="@dimen/man_12dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_denglu"
                android:layout_width="120dp"
                android:layout_height="@dimen/man_44dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/landing"
            android:layout_marginTop="@dimen/man_32dp"
            android:textSize="@dimen/text_16sp"
            android:gravity="center"
            android:textColor="@color/rgb_ffffff"
            android:text="登录"
            android:background="@drawable/shape_denglu"
            android:layout_width="120dp"
            android:layout_height="@dimen/man_44dp" />


    </LinearLayout>



</RelativeLayout>