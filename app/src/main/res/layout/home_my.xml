<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/baidi_1"
        android:padding="@dimen/man_12dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/man_174dp">

        <ImageView
            android:src="@drawable/touxiang1"
            android:id="@+id/home_touxiang"
            android:layout_marginTop="@dimen/man_33dp"
            android:layout_marginLeft="@dimen/man_24dp"
            android:layout_width="@dimen/man_64dp"
            android:layout_height="@dimen/man_64dp" />
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/man_24dp"
            android:layout_below="@id/home_touxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/home_name"
                android:textColor="@color/color_F2B95A"
                android:textSize="@dimen/text_16sp"
                android:text="反正是我"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/home_huiyuan"
                android:drawablePadding="@dimen/man_4dp"
                android:textColor="@color/color_F2B95A"
                android:drawableLeft="@drawable/huiyuan"
                android:text="会员"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:id="@+id/home_shu"
            android:background="@color/color_EBC6A8"
            android:layout_marginLeft="@dimen/man_24dp"
            android:layout_toRightOf="@id/home_touxiang"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/man_2dp"
            android:layout_height="@dimen/man_94dp"/>
        <LinearLayout
            android:id="@+id/jinyan"
            android:layout_marginTop="@dimen/man_24dp"
            android:layout_marginLeft="@dimen/man_32dp"
            android:layout_toRightOf="@id/home_shu"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/home_jinyan"
                android:textColor="@color/color_F2B95A"
                android:textSize="@dimen/text_20sp"
                android:text="56823"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center"
                android:layout_below="@id/home_jinyan"
                android:textColor="@color/color_F2B95A"
                android:textSize="@dimen/text_16sp"
                android:text="经验值"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:id="@+id/home_huizhang"
            android:layout_marginTop="@dimen/man_24dp"
            android:src="@drawable/huizhang"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginLeft="@dimen/man_32dp"
            android:layout_toRightOf="@id/home_shu"
            android:layout_marginTop="@dimen/man_32dp"
            android:layout_below="@id/jinyan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@drawable/shape_homeyuanjiao"
                android:layout_width="0dp"
                android:layout_height="@dimen/man_44dp">
                <TextView
                    android:id="@+id/daka"
                    android:textSize="@dimen/text_14sp"
                    android:textColor="@color/color_F2B95A"
                    android:text="22天"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="@dimen/text_12sp"
                    android:textColor="@color/color_F2B95A"
                    android:text="累计打卡"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/man_4dp"
                android:layout_weight="1"
                android:background="@drawable/shape_homeyuanjiao"
                android:layout_width="0dp"
                android:layout_height="@dimen/man_44dp">
                <TextView
                    android:id="@+id/xunlian"
                    android:textSize="@dimen/text_14sp"
                    android:textColor="@color/color_F2B95A"
                    android:text="16次"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="@dimen/text_12sp"
                    android:textColor="@color/color_F2B95A"
                    android:text="完成训练"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/man_4dp"
                android:layout_weight="1"
                android:background="@drawable/shape_homeyuanjiao"
                android:layout_width="0dp"
                android:layout_height="@dimen/man_44dp">
                <TextView
                    android:id="@+id/weixue"
                    android:textSize="@dimen/text_14sp"
                    android:textColor="@color/color_F2B95A"
                    android:text="02节"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="@dimen/text_12sp"
                    android:textColor="@color/color_F2B95A"
                    android:text="为学课程"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>