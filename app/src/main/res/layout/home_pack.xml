<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:paddingRight="@dimen/man_24dp"
        android:paddingLeft="@dimen/man_24dp"
        android:layout_marginTop="@dimen/man_12dp"
        android:background="@drawable/baidi_3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/man_88dp">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/nahandemubiao"
                android:layout_centerVertical="true"
                android:src="@drawable/nahandemubiao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/daka1"
                android:layout_centerInParent="true"
                android:src="@drawable/daka1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:padding="@dimen/man_12dp"
        android:scaleType="centerCrop"
        android:id="@+id/home_quanbukecheng"
        android:layout_marginTop="@dimen/man_12dp"
        android:src="@drawable/quanbukecheng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>